<%- model_class = GroupApp -%>
<div class="page-header">
  <h1><%= "#{get_icon @group_app} #{@group_app.name}".html_safe %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:body) %>:</strong></dt>
  <dd><%= @group_app.body.html_safe %></dd>
  <dt><strong><%= model_class.human_attribute_name(:group_link) %>:</strong></dt>
  <dd><%= @group_app.group_link %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              group_apps_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_group_app_path(@group_app), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              group_app_path(@group_app),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
