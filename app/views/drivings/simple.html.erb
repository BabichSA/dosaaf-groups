              <% student_hours_data = student.driving_tags(@groups) %>
              <%= content_tag( :option,
                student_hours_data[:"data-text"],
                value: student.id,
                "data-tokens": student_hours_data[:"data-tokens"],
                class: student_hours_data[:"class"] ) %>
            <% end %>  
          </select>
        </div>

        <div class="form_simple_driving">
          <label class="form-control-label select optional" for="driving_student_id_13"><b>13:00</b></label>
          <a class="btn btn-danger btn-sm" href="javascript:void(0)" id="driving_btn_del_13" name="driving[del]" style="display: none;">
            <i class="fas fa-times"></i>
          </a>
          <select class="selectpicker" data-live-search="true" id="driving_student_id_13" data-width="auto">
            <option selected value="0" >Не выбран</option>
            <% @students.each do |student| %>
              <% student_hours_data = student.driving_tags(@groups) %>
