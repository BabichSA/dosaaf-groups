<%= simple_form_for @group_app, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.error_span :name %>
  <%= f.input :body, as: :trix_editor %>
  <%= f.error_span :body %>
  <%= f.input :group_link %>
  <%= f.error_span :group_link %>
  <%= f.input :available %>
  <%= f.error_span :available %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                group_apps_path, :class => 'btn btn-default' %>
<% end %>
