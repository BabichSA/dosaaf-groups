<%- model_class = Homework -%>
<div class="container">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>

  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
    <dd><%= @homework.title %></dd>
    <dt><strong><%= model_class.human_attribute_name(:body) %>:</strong></dt>
    <dd><%= @homework.body.html_safe %></dd>
    <dt><strong><%= model_class.human_attribute_name(:assigned_at) %>:</strong></dt>
    <dd><%= @homework.assigned_at %></dd>
    <dt><strong><%= model_class.human_attribute_name(:available) %>:</strong></dt>
    <dd><%= @homework.available %></dd>
  </dl>
 
  <p id="notice"><%= notice %></p>

  <%= link_to t('.back', :default => t("helpers.links.back")),
                homework_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_homework_path(@homework), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                homework_path(@homework),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
</div>
