<%- model_class = Driving -%>
<div class="container">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>

  <div class="form-group">
    <div class="row">
      <div class="col-md-3">
        <div id="simple_driving_date"></div>
      </div>

      <div class="col-md-3">
        <div class="form-group select optional simple_driving_instructor_id form-group-valid">
          <label class="form-control-label select optional" for="simple_driving_instructor_id">Инструктор</label>
          <select class="selectpicker" name="simple_driving[instructor_id]" id="simple_driving_instructor_id" data-width="auto">
            <option selected value="0">Не выбран</option>
            <% @instructors.each do |instructor| %>
              <%= content_tag( :option, instructor.full_name, value: instructor.id ) %>
            <% end %>
          </select>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group select optional form-group-valid">
          <label class="form-control-label select optional" for="driving_student_id_8">08:00</label>
          <a class="btn btn-success btn-sm" href="javascript:void(0)" id="driving_btn_save_8" name="driving[save]" style="display: none;">
            <i class="fas fa-check"></i>
          </a>
          <select class="selectpicker" data-live-search="true" id="driving_student_id_8" data-width="auto">
            <option selected value="0" >Не выбран</option>
            <% @students.each do |student| %>
              <% student_hours_data = student.driving_tags(@groups) %>
              <%= content_tag( :option,
                student_hours_data[:"data-text"],
                value: student.id,
                "data-tokens": student_hours_data[:"data-tokens"],
                class: student_hours_data[:"class"] ) %>
            <% end %>  
          </select>
        </div>

        <div class="form-group select optional form-group-valid">
          <label class="form-control-label select optional" for="driving_student_id_10">10:00</label>
