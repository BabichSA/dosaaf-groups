<%= simple_form_for @group_app, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.trix_editor :body %>
  <%= f.input :group_link %>
  <%= f.input :fa_icon %>
  <%= f.input :available %>

  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                group_apps_path, :class => 'btn btn-default' %>
<% end %>
